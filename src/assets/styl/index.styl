// Core variables and mixins
@import '_variables'
@import 'bootstrap'

// - typo
body
  font-size: 12px

body, h1, h2, h3, h4, h5, h6, .h1, .h2, .h3, .h4, .h5, .h6
  font-family: "Helvetica Neue", "Luxi Sans", "DejaVu Sans", Tahoma, "Hiragino Sans GB", STHeiti, "Microsoft YaHei"

// Core CSS
@import 'table'
@import 'form'
@import 'btn'

// Components
// - alert
.alert
  padding: 6px 12px
  line-height: 18px
  margin-bottom: 6px
  border-radius: 0


// - tab
.nav-tabs
  > li
    margin-left: -1px
    border-top: 1px solid #ddd
    border-left: 1px solid #ddd
    border-right: 1px solid #ddd
    z-index: 1

    &.active
      border-top: 0px;
      border-left: 1px solid #DDD;
      border-right: 1px solid #DDD;
      z-index: 3

    a
      color: #666;
      border-left: 0px;
      border-right: 0px;
      margin-right: 0px;
      padding: 10px 16px;
      background: #FBFAF8;
      border-bottom: 0

    &.active > a
      border-top: 2px solid #00A2CA;
      border-left: 0px;
      border-right: 0px;
      border-bottom: 1px solid #FFF;
      color: #333
